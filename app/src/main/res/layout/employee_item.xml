<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iconoEmpleado"
            android:layout_width="66dp"
            android:layout_height="69dp"
            android:adjustViewBounds="true"
            android:src="@drawable/person" />  <!-- Reemplaza con tu icono -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombreEmployee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/emailEmployee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnEditar"
                android:layout_width="49dp"
                android:layout_height="39dp"
                android:layout_marginBottom="4dp"
                android:background="@color/colorNaranja"
                android:backgroundTint="@color/colorNaranja"
                android:scaleType="centerInside"
                android:src="@drawable/edit"
                android:tint="@color/white" />

            <ImageButton
                android:id="@+id/btnEliminar"
                android:layout_width="49dp"
                android:layout_height="36dp"
                android:background="@color/colorRojo"
                android:backgroundTint="@color/colorRojo"
                android:scaleType="centerInside"
                android:src="@drawable/delete"
                android:tint="@color/white" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>